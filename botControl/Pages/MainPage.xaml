<Page x:Class="botControl.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:botControl.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#333">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="30"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal"
                        Margin="0,10,0,10">
                <TextBlock Text="Токен" FontSize="25"
                           Foreground="White"
                           Margin="0,0,10,0"/>
                <TextBox x:Name="tokenBox"
                         FontSize="25" Width="300"/>
            </StackPanel>
            <Button x:Name="Auto"
                    Content="Подключиться"
                    FontSize="25" Width="250" Click="Auto_Click"/>
        </StackPanel>
    </Grid>
</Page>
